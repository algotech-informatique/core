{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2020"],
        "types": ["node"],
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}