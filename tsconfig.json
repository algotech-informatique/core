{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2020",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@algotech/core": [
        "dist/algotech/core"
      ],
      "@algotech/core/*": [
        "dist/algotech/core/*"
      ]
    }
  }
}
